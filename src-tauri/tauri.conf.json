{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Mnemosyne",
  "version": "0.1.0",
  "identifier": "com.corpetty.mnemosyne",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "bash ../scripts/build-all.sh"
  },
  "app": {
    "windows": [
      {
        "title": "Mnemosyne",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "binaries/mnemosyne-backend-dir": "backend"
    },
    "linux": {
      "deb": {
        "depends": ["pipewire", "ffmpeg"]
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
